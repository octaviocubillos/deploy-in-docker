{
  "name": "oton-pilot",
  "version": "1.0.0",
  "description": "A simple TypeScript CLI to manage local Docker containers",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/oton-pilot.min.js",
    "_build": "tsc",
    "pre-release": "esbuild src/index.ts --bundle --platform=node --outfile=pre-releases/oton-pilot.min.js",
    "release": "esbuild src/index.ts --bundle --minify --platform=node --outfile=releases/oton-pilot.min.js",
    "cli": "ts-node src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "dockerode": "^4.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.20.0",
    "ora": "^9.0.0",
    "tar-fs": "^3.1.1"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.29",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.23",
    "@types/tar-fs": "^2.0.4",
    "@types/tar-stream": "^3.1.4",
    "esbuild": "^0.25.11",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
